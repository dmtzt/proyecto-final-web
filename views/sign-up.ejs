<%- include ("./partials/header-home") %>

<script>
    function myFunction() {
      var x = document.getElementById("password_register");
      var y = document.getElementById("password2_register");
      if (x.type === "password" || y.type === "password") {
        x.type = "text";
        y.type = "text";
      } else {
        x.type = "password";
        y.type = "password";
      }
    }
</script>

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
    
      <!-- Title -->
      <div id="titlelabbel">
        <h1>- Sign Up -</h1>
      </div>

      <!-- Icon -->
      <div class="fadeIn first">
        <img src="https://image.flaticon.com/icons/png/512/164/164600.png" id="icon" alt="User Icon" />
      </div>
  
      <!-- Login Form -->
      <form action="/sign-up" method="POST">
        <input
        type="text"
        id="userID_register"
        name="userID_register"
        class="fadeIn second"
        placeholder="id"
      />
        <input
        type="text"
        id="name_register"
        name="name_register"
        class="fadeIn second"
        placeholder="name"
      />
      <input
        type="text"
        id="email_register"
        name="email_register"
        class="fadeIn second"
        placeholder="Email"
      />
      <input
        type="password"
        id="password_register"
        class="fadeIn third"
        name="password_register"
        placeholder="Password"
      />
      <input
        type="password"
        id="password2_register"
        class="fadeIn third"
        name="password2_register"
        placeholder="Password"
      />
        <br>
        <input type="checkbox" onclick="myFunction()"> Show Password
        <br>
        <form method="POST" action="/sign-up"> 
            <input type="submit" class="fadeIn fourth" value="Sign Up" style="background-color: #de364d" >
        </form>
      </form>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="log-in" style="color: white" >Already have an account?</a>
      </div>
  
    </div>
  </div>


