<%- include ("./partials/header-home") %>

<script>
    function myFunction() {
      var x = document.getElementById("password");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
</script>

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->

      <!-- Title -->
      <div id="titlelabbel">
        <h1>- Log In -</h1>
      </div>
      <!-- Icon -->
      <div class="fadeIn first">
        <img src="https://image.flaticon.com/icons/png/512/164/164600.png" id="icon" alt="User Icon" />
      </div>
  
      <!-- Login Form -->
      <form action="/home" method="POST">
        <input type="text" id="email" class="fadeIn second" name="email" placeholder="login">
        <input type="password" id="password" class="fadeIn third" name="password" placeholder="password" >
        <br>
        <input type="checkbox" onclick="myFunction()"> Show Password
        <br>
        <input type="submit" class="fadeIn fourth" value="Log In" style="background-color: #de364d">
      </form>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="#" style="color: white"> Forgot Password?</a>
      </div>
  
    </div>
  </div>


